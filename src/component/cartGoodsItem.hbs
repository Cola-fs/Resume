<div>
	<div class="card p-1 mb-4">
		<div class="row">
			<div class="col-2">
				<img class="card-img-top " src="{{image}}" alt="lot card">
			</div>
			<div class="col-4 mt-1">
				<h5 class="mt-2"> {{name}} </h5>
				<div>{{description}}</div>
			</div>
			<div class="col-2 my-3 mt-5">
				<div>{{title}}</div>
				<div>{{value}}</div>
			</div>
			<div class="col-2 mt-5 ">
				<div>{{amount}}</div>
			</div>
			<div class="col-2 my-2 ">
				{{#each buttons}}
				<a class="mt-3 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}"
					href="">{{text}}</a>
				{{/each}}

			</div>
		</div>
	</div>
</div>