<main class="m-4">

    <div class="mb-5">
        <div class="card">
            <div class="nav">
                {{#with navigation}}

                {{#each links}}
                <div class="nav-item">
                    <a class="nav-link" href="{{href}}"> {{text}} </a>
                </div>

                {{/each}}
                {{/with}}
                <div class="nav-item">
                    <a class="nav-link disabled" href="{{href}}"> Disabled </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <div>

                <h1>{{header}}</h1>
                <div class="mt-3">
                    {{#with rating}}
                    {{title}}:{{value}}
                    {{/with}}
                </div>

                <div>
                    {{#with actionBlock}}
                    <div class="row">
                        <div class="nav nav-tabs mt-3">
                            {{#each tabs}}
                            <div class="nav-item col-4">
                                <div>
                                    {{#with this}}
                                    <a class="nav-link {{#if isActive}}active{{/if}}" href="">{{text}}</a>
                                    {{/with}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <hr class="my-5">
                    <div>
                        {{#with report}}
                        <div class="card p-1">
                            <div class="card-body p-1">
                                <div class="m-1">
                                    {{title}}
                                </div>
                                {{#with button}}
                                <a class="m-1 btn btn-secondary" href="{{link}}">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}

                </div>
                <hr class="my-5">
                <div>
                    {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    <div>
                        {{#each buttons}}

                        {{#with this}}
                        <a class="m-1 btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}}"
                            href="{{link}}">{{text}}</a>
                        {{/with}}
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div>
                <div class="card p-2 mb-2">
                    <div class="card-body">
                        <img src="{{photo}}" alt="{{name}}">
                        <h6 class="my-2">{{name}}</h6>
                    </div>
                </div>
                <div class="card p-2 mb-2">
                    <div class="card-body">
                        <div>
                            <b>{{price}}</b>
                        </div>
                        <div>
                            {{#if inMarket}}Є в наявності{{/if}}
                        </div>
                    </div>
                    {{#each buttons}}
                    {{#with this}}
                    <div>
                        <a class="m-1 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}}{{#if isDanger}}btn-danger{{/if}}"
                            href="{{link}}">{{text}}</a>
                    </div>
                    {{/with}}
                    {{/each}}

                </div>
                <div class="card p-1 mb-2">
                    <div class="card-body">
                        {{#with seller}}
                        {{title}}: <b>{{value}}</b>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}

        </div>


        <hr class="mt-5">

        {{> reviewItem }}

        <div>
            <div class="card text-bg-success text-center p-2">
                {{#with service}}
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <div> <a class="btn btn-primary" href="link">{{text}}</a></div>
                {{/each}}
                {{/with}}
            </div>
        </div>
        <hr class="my-5">



        <div>
            {{>footer_shop_nav}}
        </div>

    </div>

</main>