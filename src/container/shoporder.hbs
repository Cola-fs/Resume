<main class="m-4">
    <div class="card">
        <div class="nav">
            {{#with navigation}}

            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href="{{href}}"> {{text}} </a>
            </div>

            {{/each}}
            {{/with}}
        </div>
    </div>

    <h1 class="my-5">{{header}}</h1>

    <div class="row">
        <div class="col-8">
            {{#with contacts_data}}
            <h4> {{title}} </h4>

            {{#each buttons}}
            <a class="btn {{#if isPrimary}}btn-primary text-bg-warning{{/if}}{{#if isOutline}}btn-outline-warning{{/if}} my-4"
                href=""> {{text}}</a>
            {{/each}}


            <div class="row m-2">
                <div class=" col-6 ">
                    {{#with form}}
                    {{#with input}}

                    {{#with surname}}
                    <div class="Text field my-2">
                        <label class="form-label" for="">{{label}}</label>
                        <div class="">
                            <input class="form-control " type="text" placeholder="{{placeholder}}">
                        </div>

                        <div class="form-text">{{caption}}</div>

                    </div>

                    {{/with}}
                </div>
                <div class=" col-6 ">
                    {{#with name}}
                    <div class="Text field my-2">
                        <label class="form-label" for="">{{label}}</label>
                        <div class="">
                            <input class="form-control " type="text" placeholder="{{placeholder}}">
                        </div>

                        <div class="form-text">{{caption}}</div>

                    </div>

                    {{/with}}
                </div>

                <div class=" col-6 my-2">
                    {{#with phone}}
                    <div class="Text field ">
                        <label class="form-label" for="">{{label}}</label>
                        <div class="">
                            <input class="form-control " type="text" placeholder="{{placeholder}}">
                        </div>

                        <div class="form-text">{{caption}}</div>

                    </div>

                    {{/with}}
                </div>

                <div class=" col-6 my-2">
                    {{#with email}}
                    <div class="Text field ">
                        <label class="form-label" for="">{{label}}</label>
                        <div class="">
                            <input class="form-control " type="text" placeholder="{{placeholder}}">
                        </div>

                        <div class="form-text">{{caption}}</div>

                    </div>

                    {{/with}}
                </div>


                {{/with}}
                <hr class="my-3">
                {{#each switch}}
                <div class="form-check form-switch my-1">
                    <input class="form-check-input" type="checkbox" {{#if isActive}} checked {{/if}}>
                    <label class="form-check-label">
                        {{text}}
                    </label>

                </div>


                {{/each}}

                <hr class="my-3">
                {{/with }}

            </div>






            {{!-- contacts_data: --}}
            {{/with}}
            <div>
                {{#with delivery}}

                <h4> {{title}} </h4>
                <div class="card my-3">
                    <div class="row">



                        {{#each select}}

                        <div class=" col-6 ">
                            <div class="mx-2">
                                {{label}}
                            </div>
                            <div class="Select field p-2">
                                <select class="form-select " name="{{label}}" id="">
                                    <option value="0" selected disabled> {{placeholder}} </option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}


                                </select>
                            </div>

                        </div>
                        {{/each}}
                    </div>

                </div>
                {{#each delivery_type}}
                <div class="form-check">
                    <input class="form-check-input" name="delivery_type" type="radio">
                    <label class="form-check-label">{{type}} </label>


                </div>

                {{/each}}

                <hr>

                {{#with payment}}
                <h4> {{title}} </h4>
                {{#each list}}
                <div class="form-check ">
                    <input class="form-check-input " name="payment" type="radio">
                    <label class="form-check-label ">{{type}} </label>
                    <div class="form-select-sm"> {{description}} </div>
                </div>
                {{/each}}

                {{/with}}
                <hr>
                {{#with contact}}
                <h4> {{title}} </h4>

                <div class="row">
                    <div class="col-6">
                        {{#with surname}}
                        <div class="Text field my-2">
                            <label class="form-label" for="">{{label}}</label>
                            <div class="">
                                <input class="form-control " type="text" placeholder="{{placeholder}}">
                            </div>

                            <div class="form-text">{{caption}}</div>

                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6">
                        {{#with name}}
                        <div class="Text field my-2">
                            <label class="form-label" for="">{{label}}</label>
                            <div class="">
                                <input class="form-control " type="text" placeholder="{{placeholder}}">
                            </div>

                            <div class="form-text">{{caption}}</div>

                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6">
                        {{#with phone}}
                        <div class="Text field my-2">
                            <label class="form-label" for="">{{label}}</label>
                            <div class="">
                                <input class="form-control " type="text" placeholder="{{placeholder}}">
                            </div>

                            <div class="form-text">{{caption}}</div>

                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6">
                        {{#with email}}
                        <div class="Text field my-2">
                            <label class="form-label" for="">{{label}}</label>
                            <div class="">
                                <input class="form-control " type="text" placeholder="{{placeholder}}">
                            </div>

                            <div class="form-text">{{caption}}</div>

                        </div>

                        {{/with}}
                    </div>
                    <hr class="my-3">
                </div>
                {{/with}}

                {{#with coment}}
                <div class="Text field ">
                    <label class="form-label" for="">{{label}}</label>
                    <div class="col-4">
                        <input class="form-control " type="text" placeholder="{{placeholder}}">
                    </div>
                </div>
                {{/with}}

                <hr class="my-3">
                {{/with}}
            </div>



            {{#with coupon}}
            <h4> {{title}} </h4>

            {{#with select}}
            {{#with availabel_coupon}}

            <div class="Select field p-2 ">
                <label for=""> {{label}} </label>
                <select class="form-select form-select-lg" name="{{label}}" id="">
                    <option value="0" selected disabled> {{placeholder}} </option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}


                </select>
            </div>

            {{/with}}

            {{#with friend_coupon}}

            <div class="Select field p-2 ">
                <label for=""> {{label}} </label>
                <select class="form-select form-select-sm" name="{{label}}" id="">
                    <option value="0" selected disabled> {{placeholder}} </option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}


                </select>
            </div>

            {{/with}}




            {{/with}}

            {{#with add}}

            {{#with friend }}
            <div class="Text field m-2">
                <label class="form-label" for=""> {{label}} </label>
                <input class="form-control form-select-lg" type="text" placeholder="{{placeholder}}">
                <div class="form-text"> {{caption}} </div>

            </div>

            {{/with}}

            {{#with colleague }}
            <div class="Text field m-2">
                <label class="form-label" for=""> {{label}} </label>
                <input class="form-control form-select-sm" type="text" placeholder="{{placeholder}}">
                <div class="form-text"> {{caption}} </div>

            </div>

            {{/with}}


            {{/with}}

            {{/with}}
            <hr class="my-4">
            {{#with quiz}}
            <h4>{{title}}</h4>
            <div class="my-3">
                {{#with preference}}
                <div>{{title}}</div>
                {{#each options}}
                <div class="form-check ">
                    <input class="form-check-input " name="preference" type="radio">
                    <label class="form-check-label  ">{{this}} </label>
                </div>
                {{/each}}
                {{/with}}
            </div>


            <div class="my-3">
                {{#with your_expirience}}
                <div class="Text field my-2">
                    <label class="form-label" for=""> {{label}} </label>
                    <input class="form-control " type="text" placeholder="">
                </div>
                {{/with}}
            </div>


            <div class="my-3">
                {{#with factors}}
                <div>{{title}}</div>
                {{#each options}}
                <div class="form-check ">
                    <input class="form-check-input " name="preference" type="checked">
                    <label class="form-check-label  ">{{this}} </label>
                </div>
                {{/each}}
                {{/with}}

                {{/with}}

            </div>




        </div>

        <div class="col-4">
            <div class="card mb-3">
                <div class="card-body p-2 pb-0">
                    {{#each action_block}}
                    <div>
                        <a class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}} mb-2 ms-1"
                            href=""> {{text}} </a>
                    </div>
                    {{/each}}


                </div>
            </div>
            <div class="card">
                <div class="card-body p-2 pb-0">
                    {{#with total}}
                    <h4 class=""> {{title}} </h4>
                    {{#each item_list}}
                    <div>
                        {{name}}: {{price}}
                    </div>
                    {{/each}}
                    <hr class="my-1">
                    {{#each additional_info}}
                    <div>
                        {{text}}: {{value}}
                    </div>
                    {{/each}}

                    {{#with total_price}}
                    <div>
                        {{text}}: {{value}}
                    </div>
                    {{/with}}
                    <hr class="my-1">
                    <div class="mb-1">
                        {{#each button}}
                        <div>
                            <a class="btn {{#if isPrimary}}btn-primary text-bg-primary{{/if}}{{#if isOutline}}btn-outline-primary{{/if}} my-1"
                                href=""> {{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}



                </div>




            </div>
        </div>
        <hr class="my-4">
        
   <div>
    {{>footer_shop_nav}}
   </div>



    </div>


</main>