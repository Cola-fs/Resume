{{#with main}}
<main class="m-4">
    <section class="my-2">
        {{> title data="All Skills" big=true}}
        <ul class="list-group">
            {{#each skills}}
            <li class="list-group-item"> {{name}}
                {{#if point includeZero=true }} ({{point}}) {{/if}}
                {{#if isTop}} TOP {{/if}}

                {{#unless point includeZero=true }} (не вивчаємо) {{/unless}}

                {{#unless point}}
                {{#if point includeZero=true }}
                (зараз вивчаємо)
                {{/if}}
                {{/unless}}
            </li>
            {{/each}}
        </ul>
    </section>
    <section class="my-2">
        {{> title data="My hobbies" }}
        <ol class="list-group">
            {{#each hobbies }}
            <li class="list-group-item">
                {{name}}
                {{#if isMain}} (favorite) {{/if}}
            </li>
            {{/each}}
        </ol>
    </section>
</main>
{{/with}}