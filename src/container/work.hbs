{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="my-2">
    {{#with main}}
    <main class="m-2">
        <section class="my-2">
            {{>title data="Work History" big=true}}
            {{#each works}}
            <ul>
                <li>

                    <div class="my-2">
                        {{position}}
                    </div>

                    <div class="my-2">
                        {{duration.from}} -
                        {{#if duration.to}} {{duration.to }} {{else}} (досі працюємо) {{/if}}
                    </div>

                    <div class="my-2 badge text-bg-info">
                        {{#if company.url}}
                        {{> link href=company.url text=company.name blank=true noLine=true}}
                        {{else}}
                        <b> {{company.name}} </b>
                        {{/if}}
                    </div>


                    <div class="my-2 ">
                        <strong>Projects ({{projectAmount}}) </strong>
                    </div>

                    {{#each projects}}
                    <ul>
                        <li>
                            {{> link href=url text=name blank=true noLine=true}}

                            <div class="my-2">
                                <p>
                                    {{about}}
                                </p>
                            </div>


                            <div class="my-2 badge text-bg-secondary"><em>Project stacks ({{stackAmount}}) </em></div>

                            <div class="my-2">
                                {{#each stacks}}
                                <ul>
                                    <Li>
                                        {{name}}
                                    </Li>
                                </ul>
                                {{/each}}
                            </div>


                            <div class="my-2 badge text-bg-secondary"><em>Project awards</em></div>

                            <div class="my-2">
                                {{#each awards}}
                                <ul>
                                    <Li>
                                        {{name}}
                                    </Li>
                                </ul>
                                {{/each}}
                            </div>
                        </li>
                    </ul>
                    {{/each}}
                </li>
            </ul>
            {{/each}}
        </section>
    </main>
    {{/with}}

</div>

