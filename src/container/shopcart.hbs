<main class="m-4">

    <div class="mb-5">
        <div class="card">
            <div class="nav">
                {{#with navigation}}

                {{#each links}}
                <div class="nav-item">
                    <a class="nav-link" href="{{href}}"> {{text}} </a>
                </div>

                {{/each}}
                {{/with}}
                <div class="nav-item">
                    <a class="nav-link disabled" href="{{href}}"> Disabled </a>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-5">
        {{#with header}}
        <h1> {{title}} </h1>
        {{#with button}}
        <a class="btn btn-outline-secondary" href="{{link}}"> {{text}} </a>
        {{/with}}
        {{/with}}
    </div>
    <hr class="my-5">
    <div>
        {{#each goodsBlock}}
        {{>cartGoodsItem image=image name=name description=description
        title=price.title value=price.value amount=amount
        buttons=buttons
        }}
        {{/each}}
    </div>
    <hr class="my-5">
    <div>
        {{#with total}}
        <div class="">
            <H3>{{title}}</H3>
        </div>
        <div class="display-3">
            {{amount}}
        </div>
        <div>{{delivery}} </div>
        <div>
            {{#each buttons}}
            <div>
                <a class="mt-3 btn {{#if isSuccess}}btn-success{{/if}}{{#if isOutline}}btn-outline-success{{/if}}"
                    href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr class="my-5">
    <div>
        {{#with goodsOtherBlock}}
        <h4 class="text-center mb-3"> {{title}}</h4>
        <div class="row ">
            {{#each cards}}
            <div class="card col-4 ">
                <img class=" card-img-top " src="{{image}}" alt="{{title}}">
                <div class="card-body">
                    <div class="card-title">
                        {{title}}
                        {{#if isHot}}
                        <div class="badge text-bg-warning">
                            Hot
                        </div>
                        {{/if}}
                        {{#if idNew}}
                        <div class="badge text-bg-success">
                            New
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr class="my-5">
    <div>
        {{#with subscribe}}
        <h2>{{header}}</h2>
        <p>{{description}}</p>
        <div>
            {{#each buttons}}
            <div>
                <a class="btn btn-primary mb-3" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr class="my-5">
    <div>
        {{#each footer}}
        <div class="nav row ">
            {{#each this }}
            <div class=" nav-item col-2">
                {{#with this}}
                <a class="nav-link" href="{{link}}">{{text}} </a>
            </div>
            {{/with}}
            {{/each}}
        </div>
        {{/each}}
    </div>



</main>