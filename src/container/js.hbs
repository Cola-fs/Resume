<main class="m-4">
    <div>
        <h1> {{name}} </h1>
    </div>

    <div> {{description}} </div>
    {{#with history}}
    <ul>
        <div> {{founder}} {{year}} </div>
    </ul>
    {{/with}}




    <div class="my-3">
        <div><span class="badge text-bg-info">types</span></div>
        {{#each types}}


        <ul class="my-1">
            <li class="">
                {{this}}
            </li>
        </ul>
        {{/each}}
    </div>
    <div><span class="badge text-bg-info">syntax</span></div>
    {{#with syntax}}
    <ul>
        <div class="my-3">
            <div class="badge text-bg-secondary">variables</div>
            {{#each variables}}
            <ul class="my-1">
                <li>
                    {{this}}
                </li>
            </ul>
            {{/each}}

        </div>

        <div class="my-3">
            <div class="badge text-bg-secondary">functions</div>
            {{#each functions}}
            <ul class="my-1">
                <li>
                    {{this}}
                </li>
            </ul>
            {{/each}}

        </div>

        <div class="my-3">
            <div class="badge text-bg-secondary">conditionals</div>
            {{#each conditionals}}
            <ul class="my-1">
                <li>
                    {{this}}
                </li>
            </ul>
            {{/each}}
        </div>


        <div class="my-3">
            <div class="badge text-bg-secondary">loops</div>
            {{#each loops}}
            <ul>
                <li>
                    {{this}}
                </li>
            </ul>
            {{/each}}
        </div>


        <div class="badge text-bg-secondary">classes</div>
        {{#each classes}}
        <ul>
            <li>
                {{this}}
            </li>
        </ul>
        {{/each}}
    </ul>
    {{/with}}

    <div class="my-3">
        <div><span class="badge text-bg-info">features</span></div>
        {{#each features}}

        <ul class="my-1">
            <li>
                {{this}}
            </li>
        </ul>
        {{/each}}
    </div>


    <div class="my-3">
        <div><span class="badge text-bg-info">libraries</span></div>
        {{#each libraries}}
        <ul class="my-1">
            <li>
                {{this}}
            </li>
        </ul>
        {{/each}}
    </div>


    <div class="my-3">
        <div><span class="badge text-bg-info">tools</span></div>
        {{#each tools}}

        <ul class="my-1">
            <li>
                {{this}}
            </li>
        </ul>
        {{/each}}
    </div>

    <div class="my-3">
        <div><span class="badge text-bg-info">community</span></div>
        {{#each community}}
        <ul class="my-1">
            <li>
                {{name}} ({{type}})
            </li>
        </ul>
        {{/each}}
    </div>


</main>